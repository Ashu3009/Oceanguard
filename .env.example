# OceanGuard Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=*

# Database
DATABASE_NAME=db.sqlite3

# WiFi Credentials (for ESP32)
WIFI_SSID=Your-WiFi-Name
WIFI_PASSWORD=Your-WiFi-Password

# Django Admin Credentials
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Server Configuration
SERVER_IP=192.168.0.XXX
SERVER_PORT=8000

# ML Settings
ML_BOAT_DETECTION_ENABLED=True
ML_CONFIDENCE_THRESHOLD=0.5

# QR Code Settings
QR_SCAN_ENABLED=True

# Camera GPS Location
CAMERA_LATITUDE=0.0
CAMERA_LONGITUDE=0.0
CAMERA_LOCATION_NAME=Your Location Name
CAMERA_HEIGHT=10

# Media Settings
MEDIA_ROOT=media
LIVE_MONITORING_CLEANUP_TIME=300

# Email Settings (Optional - for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
